{
  "name": "rag-support-chatbot",
  "version": "1.0.0",
  "type": "module",
  "description": "RAG Support Chatbot using LangChain",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:query": "tsx src/query.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "rag",
    "langchain",
    "chatbot",
    "vector-search",
    "llm"
  ],
  "author": "Omer Erakman <omererakman@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@langchain/community": "^1.0.2",
    "@langchain/core": "^1.0.4",
    "@langchain/openai": "^1.1.0",
    "chromadb": "^3.1.2",
    "dotenv": "^17.2.3",
    "langchain": "^1.0.4",
    "openai": "^6.8.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "tiktoken": "^1.0.22",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "overrides": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.12",
    "openai": "^6.8.1"
  },
  "peerDependencyRules": {
    "allowedVersions": {
      "dotenv": "*",
      "zod": "*",
      "openai": "*"
    }
  }
}
