# Provider Configuration
# LLM Provider: openai (default)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# Embedding Provider: openai (default)
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here

# Chunking Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MIN_CHUNKS=20

# Vector Store Configuration
# Possible values: chromadb, memory
VECTOR_STORE_TYPE=chromadb
CHROMA_COLLECTION_NAME=support_embeddings
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_SSL=false
CHROMA_API_KEY=

# Retrieval Configuration
# Possible values: similarity, mmr, compression
RETRIEVER_TYPE=similarity
TOP_K=5
SCORE_THRESHOLD=0.5

# Reranking Configuration
# Possible values: true, false
RERANK_ENABLED=false
RERANK_TOP_N=20
RERANK_TOP_K=5

# Safety Configuration
# Possible values: true, false
SAFETY_ENABLED=true

# Confidence Scoring Configuration
# Enable/disable confidence scoring (default: true)
CONFIDENCE_ENABLED=true
# Confidence thresholds (0-1, must be ordered: LOW < MEDIUM < HIGH)
CONFIDENCE_LOW_THRESHOLD=0.4
CONFIDENCE_MEDIUM_THRESHOLD=0.6
CONFIDENCE_HIGH_THRESHOLD=0.8
# Include factor breakdown in confidence response (default: true)
CONFIDENCE_INCLUDE_FACTORS=true

# Cache Configuration
# Enable/disable caching (default: false)
CACHE_ENABLED=false
# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600
# Cache embeddings (default: false)
CACHE_EMBEDDINGS=false
# Cache retrieval results (default: false)
CACHE_RETRIEVAL=false
# Cache LLM responses (default: false)
CACHE_LLM=false

# Logging
# Possible values: debug, info, warn, error
LOG_LEVEL=info
# Log format: json, text, or auto (auto uses text in development, json otherwise)
LOG_FORMAT=auto
# Possible values: development, production, test
NODE_ENV=development
